<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <converters:NullableDoubleToStringConverter x:Key="DoubleToStringKey"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="System Clock" Style="{StaticResource SectionHeader}"/>
                    <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="40" Margin="0,0,0,20"/>
                </StackPanel>

                <Border Grid.Row="1" Background="#ECF0F1" CornerRadius="8" Padding="10" Margin="0,0,0,20">
                    <Label Content="{Binding CurrentTime}"
                           ContentStringFormat='{}{0:HH:mm:ss dd/MM/yyyy}'
                           FontWeight="Bold" FontSize="20" 
                           Foreground="{StaticResource PrimaryColor}"
                           HorizontalContentAlignment="Center"/>
                </Border>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Advance Time:" Style="{StaticResource LabelHeader}" Margin="0,0,0,5"/>
                        <Button Content="+ 1 Minute" Click="btnAddOneMinute_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="+ 1 Hour" Click="btnAddOneHour_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="+ 1 Day" Click="btnAddOneDay_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="+ 1 Month" Click="btnAddOneMonth_Click" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="+ 1 Year" Click="btnAddOneYear_Click" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10,0,0,0" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="System Management" Style="{StaticResource SectionHeader}"/>
                    <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="60" Margin="0,0,0,25"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Configuration Settings" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>

                    <Border Grid.Row="1" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6" Padding="15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Max Delivery Range (km):" Style="{StaticResource LabelHeader}" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding Configuration.MaxDeliveryDistance, 
                                                        UpdateSourceTrigger=PropertyChanged, 
                                                        Converter={StaticResource DoubleToStringKey},
                                                        ValidatesOnExceptions=True}" 
                                         Style="{StaticResource TextBoxRegular}"/>
                                <Button Grid.Column="2" Content="Update" Click="btnUpdateConfig_Click" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Padding="15,5" Margin="10,0,0,0" Height="30" FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <StackPanel Grid.Row="3">
                    <Label Content="Management Actions" Style="{StaticResource LabelHeader}" Margin="0,0,0,5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Button Content="Manage Couriers" Click="btnCouriers_Click" Style="{StaticResource PrimaryButton}" Height="50"/>
                            <Button Content="Manage Orders" Click="btnOrders_Click" Style="{StaticResource PrimaryButton}" Height="50" ToolTip="Coming Soon"/>

                            <Button Content="Manage Deliveries" Click="btnDeliveries_Click" Style="{StaticResource PrimaryButton}" Height="50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                            <Label Content="Database Maintenance" FontSize="11" Foreground="{StaticResource LightTextColor}" Margin="0,0,0,5"/>
                            <Button Content="Initialize Database" Click="btnInitializeDB_Click" Style="{StaticResource SecondaryButton}"/>
                            <Button Content="Reset Database" Click="btnResetDB_Click" Style="{StaticResource SecondaryButton}" Foreground="{StaticResource AccentColor}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
