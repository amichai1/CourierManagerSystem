<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:helpers="clr-namespace:PL.Helpers"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Wolt Delivery System - Admin Dashboard" 
        Height="680" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundColor}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <converters:BoolInverterConverter x:Key="BoolInverterConverter"/>
        <converters:SimulatorButtonTextConverter x:Key="SimulatorButtonTextConverter"/>
        
        <!-- Local Converters -->
        <converters:StatusToColorConverter x:Key="StatusToColor"/>
        <converters:ScheduleStatusToColorConverter x:Key="ScheduleStatusToColor"/>
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        
        <!-- DataTrigger Style for Status Cards -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- EventTrigger - Hover Animation -->
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.03" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.03" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Status Card Style with DataTrigger for Open Orders -->
        <Style x:Key="OpenOrdersCardStyle" TargetType="Border" BasedOn="{StaticResource StatusCardStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding OrderSummary.OpenCount, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource InfoColor}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Status Card Style with MultiDataTrigger for In Risk -->
        <Style x:Key="InRiskCardStyle" TargetType="Border" BasedOn="{StaticResource StatusCardStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding OrderSummary.InRiskCount, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                    <Setter Property="Background" Value="#FFF8E1"/>
                    <Setter Property="BorderBrush" Value="{StaticResource WarningColor}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo/Icon  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <!-- Logo Shape -->
            <Canvas Width="40" Height="30" Margin="0,0,15,0">
                <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryColor}"/>
                <Path Data="M20,8 L28,20 L20,32 L12,20 Z" Fill="White" Canvas.Left="0" Canvas.Top="0"/>
                <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="15" Canvas.Top="15"/>
            </Canvas>
            <TextBlock Text="JCT Delivery System" Style="{StaticResource SectionHeader}" 
                       VerticalAlignment="Center" FontSize="28"/>
        </StackPanel>

        <!-- Clock, Time Controls, and Simulator - ALL IN ONE ROW -->
        <Border Grid.Row="1" Style="{StaticResource RoundedBorderWithShadow}" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current Time Display -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ•" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="ClockRotation" Angle="0"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="ClockRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:1:0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentTime, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                               FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"
                               Foreground="{StaticResource SecondaryColor}"/>
                </StackPanel>

                <!-- Time Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="btnAddOneMinute" Click="btnAddOneMinute_Click" Content="+ 1 Min" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>

                    <Button Name="btnAddOneHour" Click="btnAddOneHour_Click" Content="+ 1 Hour" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>

                    <Button Name="btnAddOneDay" Click="btnAddOneDay_Click" Content="+ 1 Day" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>

                    <Button Name="btnAddOneMonth" Click="btnAddOneMonth_Click" Content="+ 1 Month" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>

                    <Button Name="btnAddOneYear" Click="btnAddOneYear_Click" Content="+ 1 Year" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>
                </StackPanel>

                <!-- Simulator Controls -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Border Background="{StaticResource AppBackgroundColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â±ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtSimulatorInterval" 
                                     Width="45" 
                                     Text="{Binding Interval, RelativeSource={RelativeSource AncestorType=Window}}"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource TextBoxRegular}"
                                     FontSize="12"
                                     Padding="4,2"
                                     ToolTip="Interval in minutes"
                                     IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>
                            <TextBlock Text="min" FontSize="11" VerticalAlignment="Center" Margin="3,0,0,0" 
                                       Foreground="{StaticResource LightTextColor}"/>
                        </StackPanel>
                    </Border>
                    <Button x:Name="btnToggleSimulator" 
                            Click="btnToggleSimulator_Click"
                            Width="120"
                            Style="{StaticResource PrimaryButton}"
                            Padding="10,6"
                            FontSize="12"
                            Content="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource SimulatorButtonTextConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Order Status Summary Cards -->
            <Border Grid.Column="0" Style="{StaticResource RoundedBorderWithShadow}" Padding="20" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ“Š Order Status Overview" Style="{StaticResource SectionHeader}" Grid.Row="0"/>

                    <!-- Status Cards Grid -->
                    <UniformGrid Grid.Row="1" Rows="2" Columns="3" Margin="0,10,0,0">
                        
                        <!-- Open Orders Card with DataTrigger -->
                        <Border Style="{StaticResource OpenOrdersCardStyle}" MouseLeftButtonDown="OpenOrders_Click">
                            <StackPanel>
                                <TextBlock Text="ðŸ“¦ Open" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.OpenCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource InfoColor}"/>
                            </StackPanel>
                        </Border>

                        <!-- In Progress Card -->
                        <Border Style="{StaticResource StatusCardStyle}" MouseLeftButtonDown="InProgressOrders_Click">
                            <StackPanel>
                                <TextBlock Text="ðŸšš In Progress" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.InProgressCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource WarningColor}"/>
                            </StackPanel>
                        </Border>

                        <!-- Delivered Card -->
                        <Border Style="{StaticResource StatusCardStyle}" MouseLeftButtonDown="DeliveredOrders_Click">
                            <StackPanel>
                                <TextBlock Text="âœ… Delivered" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.DeliveredCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>

                        <!-- On Time Card -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="â° On Time" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.OnTimeCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>

                        <!-- In Risk Card with DataTrigger -->
                        <Border Style="{StaticResource InRiskCardStyle}">
                            <StackPanel>
                                <TextBlock Text="âš ï¸ In Risk" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.InRiskCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource WarningColor}"/>
                            </StackPanel>
                        </Border>

                        <!-- Late Card -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="âŒ Late" FontWeight="SemiBold" Foreground="{StaticResource LightTextColor}"/>
                                <TextBlock Text="{Binding OrderSummary.LateCount, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource DangerColor}"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Right Panel - Configuration & Actions -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Quick Actions -->
                <Border Grid.Row="0" Style="{StaticResource RoundedBorderWithShadow}" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="âš¡ Quick Actions" Style="{StaticResource SubtitleHeader}"/>
                        <Button Content="ðŸ“¦ Manage Orders" Click="btnOrders_Click" Style="{StaticResource PrimaryButton}" Margin="0,5"/>
                        <Button Content="ðŸšš Manage Couriers" Click="btnCouriers_Click" Style="{StaticResource PrimaryButton}" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Configuration Panel -->
                <Border Grid.Row="1" Style="{StaticResource RoundedBorderWithShadow}" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Configuration" Style="{StaticResource SubtitleHeader}"/>

                        <Label Content="Max Delivery Distance (km):" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding Configuration.MaxDeliveryDistance, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxRegular}"/>
                        <Button Content="ðŸ’¾ Update Config" Click="btnUpdateConfig_Click" 
                                Style="{StaticResource SecondaryButton}" Margin="0,15,0,0"
                                IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Database Actions -->
                <Border Grid.Row="2" Style="{StaticResource RoundedBorderWithShadow}" Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ—„ï¸ Database" Style="{StaticResource SubtitleHeader}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="ðŸ”„ Initialize" Click="btnInitializeDB_Click" Style="{StaticResource SecondaryButton}" Width="110"
                                    IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>
                            <Button Content="ðŸ—‘ï¸ Reset" Click="btnResetDB_Click" Style="{StaticResource DeleteButtonStyle}" Width="100" Margin="10,0,0,0"
                                    IsEnabled="{Binding IsSimulatorRunning, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolInverterConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Margin="0,15,0,0">
            <Grid>
                <TextBlock Text="made by ariel yazdi and amichai mukades" 
                           HorizontalAlignment="Center" 
                           Foreground="{StaticResource LightTextColor}"
                           FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
