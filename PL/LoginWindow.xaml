<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Delivery Management System - Login" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown">
    <Border CornerRadius="15" Background="White" Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="15,15,0,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“¦ Delivery Management System" 
                               FontSize="24" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                    <TextBlock Text="Login Portal" 
                               FontSize="14" Foreground="#ECEFF1" TextAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Margin="40,30,40,20" VerticalAlignment="Top">
                <Label Content="User ID" Style="{StaticResource LabelHeader}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUserId" 
                         Style="{StaticResource TextBoxRegular}"
                         Padding="12,4" 
                         FontSize="14"
                         Height="40"
                         VerticalContentAlignment="Center"
                         KeyDown="TextBox_KeyDown"/>
                
                <Label Content="Password" Style="{StaticResource LabelHeader}" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             Style="{StaticResource PasswordBoxStyle}"
                             Padding="12,4" 
                             FontSize="14"
                             Height="40"
                             VerticalContentAlignment="Center"
                             KeyDown="PasswordBox_KeyDown"/>

                <TextBlock x:Name="lblError" 
                           Text="" 
                           Foreground="{StaticResource AccentColor}" 
                           FontSize="12" 
                           TextWrapping="Wrap"
                           Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="0,0,15,15" Padding="40,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            Click="btnCancel_Click"
                            Height="40"/>

                    <Button Grid.Column="2" 
                            x:Name="btnLogin"
                            Content="Login" 
                            Style="{StaticResource PrimaryButton}"
                            Click="btnLogin_Click"
                            Height="40"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
