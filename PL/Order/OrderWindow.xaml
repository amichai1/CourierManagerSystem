<Window x:Class="PL.Order.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Order Details" Height="700" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <converters:PhoneNumberConverter x:Key="PhoneConverterKey"/>
        <converters:WeightConverter x:Key="WeightConverterKey"/>
        <converters:VolumeConverter x:Key="VolumeConverterKey"/>
        <converters:CustomerNameConverter x:Key="CustomerNameConverterKey"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="20" Padding="25">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="lblTitle" Text="Order Details" Style="{StaticResource SectionHeader}"/>
                <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="60"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <!-- ID -->
                    <Label Content="Order ID" Style="{StaticResource LabelHeader}"/>
                    <TextBox Text="{Binding CurrentOrder.Id, Mode=OneWay}" 
                             IsReadOnly="True"
                             Style="{StaticResource TextBoxRegular}"
                             Margin="0,0,0,15"/>

                    <!-- Customer Information -->
                    <TextBlock Text="Customer Information" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Customer Name" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CustomerName, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CustomerNameConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Phone Number" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CustomerPhone, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PhoneConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Format: 05XXXXXXXX"/>
                        </StackPanel>
                    </Grid>

                    <!-- Delivery Information -->
                    <TextBlock Text="Delivery Information" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Label Content="Address" Style="{StaticResource LabelHeader}"/>
                    <TextBox Text="{Binding CurrentOrder.Address, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxRegular}" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Order Type" Style="{StaticResource LabelHeader}"/>
                            <ComboBox x:Name="cbxOrderType" 
                                      Style="{StaticResource ComboBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Order Status" Style="{StaticResource LabelHeader}"/>
                            <ComboBox x:Name="cbxOrderStatus" 
                                      Style="{StaticResource ComboBoxRegular}"
                                      SelectionChanged="cbxOrderStatus_SelectionChanged"/>
                        </StackPanel>
                    </Grid>

                    <!-- Package Details -->
                    <TextBlock Text="Package Details" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Weight (kg)" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Weight, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource WeightConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Minimum 1 kg"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Volume (m³)" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Volume, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VolumeConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Minimum 1 m³"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Description" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxRegular}" Height="60" 
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <CheckBox x:Name="chkFragile" 
                                      Content="Fragile Items"
                                      IsChecked="{Binding CurrentOrder.IsFragile}"
                                      Foreground="{StaticResource TextColor}"
                                      FontSize="13"/>
                        </StackPanel>
                    </Grid>

                    <!-- Courier Assignment -->
                    <Border x:Name="courierAssignmentPanel" Visibility="Collapsed" Padding="15" Background="#F5F7FA" CornerRadius="6" Margin="0,0,0,15">
                        <StackPanel>
                            <Label Content="Assign Courier" Style="{StaticResource LabelHeader}"/>
                            <ComboBox x:Name="cbxCourier" 
                                      Style="{StaticResource ComboBoxRegular}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"/>
                        </StackPanel>
                    </Border>

                    <!-- Timeline Information -->
                    <TextBlock Text="Timeline" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,10,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Created At" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CreatedAt, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Expected Delivery" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.ExpectedDeliverdTime, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Pickup Date" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.PickupDate, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Delivery Date" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.DeliveryDate, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnActionOrSave" 
                            Content="Add" 
                            Click="btnActionOrSave_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="Cancel" 
                            Click="btnCancel_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
