<Window x:Class="PL.Order.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Order Details" Height="800" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <converters:PhoneNumberConverter x:Key="PhoneConverterKey"/>
        <converters:WeightConverter x:Key="WeightConverterKey"/>
        <converters:VolumeConverter x:Key="VolumeConverterKey"/>
        <converters:CustomerNameConverter x:Key="CustomerNameConverterKey"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="20" Padding="25">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="lblTitle" Text="Order Details" Style="{StaticResource SectionHeader}"/>
                <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="60"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <!-- ID -->
                    <Label Content="Order ID" Style="{StaticResource LabelHeader}"/>
                    <TextBox Text="{Binding CurrentOrder.Id, Mode=OneWay}" 
                             IsReadOnly="True"
                             Style="{StaticResource TextBoxRegular}"
                             Margin="0,0,0,15"/>

                    <!-- Customer Information -->
                    <TextBlock Text="Customer Information" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Customer Name" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CustomerName, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CustomerNameConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Phone Number" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CustomerPhone, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PhoneConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Format: 05XXXXXXXX"/>
                        </StackPanel>
                    </Grid>

                    <!-- Delivery Information -->
                    <TextBlock Text="Delivery Information" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Label Content="Address" Style="{StaticResource LabelHeader}"/>
                    <TextBox Text="{Binding CurrentOrder.Address, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxRegular}" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Order Type" Style="{StaticResource LabelHeader}"/>
                            <ComboBox x:Name="cbxOrderType" 
                                      Style="{StaticResource ComboBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Order Status" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.OrderStatus, Mode=OneWay}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"
                                     Background="#F5F7FA"/>
                        </StackPanel>
                    </Grid>

                    <!-- Package Details -->
                    <TextBlock Text="Package Details" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Weight (kg)" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Weight, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource WeightConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Minimum 1 kg"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Volume (mÂ³)" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Volume, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VolumeConverterKey}}" 
                                     Style="{StaticResource TextBoxRegular}"
                                     ToolTip="Minimum 1 mÂ³"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Description" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxRegular}" Height="60" 
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <CheckBox x:Name="chkFragile" 
                                      Content="Fragile Items"
                                      IsChecked="{Binding CurrentOrder.IsFragile}"
                                      Foreground="{StaticResource TextColor}"
                                      FontSize="13"/>
                        </StackPanel>
                    </Grid>

                    <!-- Current Courier Info (Read-Only) -->
                    <Border x:Name="courierInfoPanel" 
                            Visibility="{Binding CourierInfoVisibility}"
                            Padding="15" 
                            Background="#E8F5E9" 
                            CornerRadius="6" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸšš Assigned Courier" FontWeight="SemiBold" FontSize="13" Foreground="#2E7D32" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Courier Name" FontSize="11" Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock Text="{Binding CurrentOrder.CourierName}" FontWeight="Medium" Foreground="{StaticResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Assigned At" FontSize="11" Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock Text="{Binding CurrentOrder.CourierAssociatedDate, StringFormat='dd/MM/yyyy HH:mm'}" FontWeight="Medium" Foreground="{StaticResource TextColor}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Timeline Information -->
                    <TextBlock Text="Timeline" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource SecondaryColor}" Margin="0,10,0,10"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Created At" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.CreatedAt, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Expected Delivery" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.ExpectedDeliverdTime, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Pickup Date" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.PickupDate, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Delivery Date" Style="{StaticResource LabelHeader}"/>
                            <TextBox Text="{Binding CurrentOrder.DeliveryDate, Mode=OneWay, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                     IsReadOnly="True"
                                     Style="{StaticResource TextBoxRegular}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Delivery History Section -->
                    <Border x:Name="deliveryHistoryPanel" 
                            Visibility="{Binding DeliveryHistoryVisibility, RelativeSource={RelativeSource AncestorType=Window}}"
                            Background="#FAFBFC" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="0,10,0,0"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="ðŸ“¦ Delivery History" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Foreground="{StaticResource SecondaryColor}"/>
                                <TextBlock Text="{Binding DeliveryHistoryCount, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=' ({0} records)'}" 
                                           FontSize="12" 
                                           Foreground="{StaticResource LightTextColor}"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"/>
                            </StackPanel>

                            <!-- Empty State -->
                            <TextBlock x:Name="tbNoDeliveryHistory"
                                       Text="No delivery history for this order."
                                       Foreground="{StaticResource LightTextColor}"
                                       FontStyle="Italic"
                                       Visibility="{Binding NoDeliveryHistoryVisibility, RelativeSource={RelativeSource AncestorType=Window}}"
                                       Margin="0,5,0,5"/>

                            <!-- Delivery History List -->
                            <ItemsControl ItemsSource="{Binding DeliveryHistory, RelativeSource={RelativeSource AncestorType=Window}}" 
                                          Visibility="{Binding HasDeliveryHistoryVisibility, RelativeSource={RelativeSource AncestorType=Window}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                CornerRadius="4" 
                                                Padding="12" 
                                                Margin="0,0,0,8"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Status Icon -->
                                                <Border Grid.Column="0" 
                                                        Width="36" Height="36" 
                                                        CornerRadius="18" 
                                                        Background="#E8F5E9"
                                                        Margin="0,0,12,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="ðŸšš" 
                                                               FontSize="16" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Details -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding CourierName}" 
                                                                   FontWeight="SemiBold" 
                                                                   Foreground="{StaticResource TextColor}"/>
                                                        <TextBlock Text=" â€¢ " 
                                                                   Foreground="{StaticResource LightTextColor}"/>
                                                        <TextBlock Text="{Binding DeliveryType}" 
                                                                   Foreground="{StaticResource LightTextColor}"
                                                                   FontSize="12"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding StartTimeDelivery, StringFormat='Started: {0:dd/MM/yyyy HH:mm}'}" 
                                                               FontSize="11" 
                                                               Foreground="{StaticResource LightTextColor}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- End Status -->
                                                <StackPanel Grid.Column="2" 
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right">
                                                    <Border CornerRadius="4" 
                                                            Padding="8,4" 
                                                            Background="#F3F4F6">
                                                        <TextBlock Text="{Binding EndType, TargetNullValue='In Progress'}" 
                                                                   FontSize="11" 
                                                                   FontWeight="Medium"
                                                                   Foreground="{StaticResource SecondaryColor}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding EndTime, StringFormat='{}{0:dd/MM HH:mm}', TargetNullValue='â€”'}" 
                                                               FontSize="10" 
                                                               Foreground="{StaticResource LightTextColor}"
                                                               HorizontalAlignment="Right"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Cancel Order Button (only for non-delivered, non-canceled orders) -->
                    <Button x:Name="btnCancelOrder" 
                            Content="ðŸš« Cancel Order" 
                            Click="btnCancelOrder_Click"
                            Visibility="{Binding CancelOrderVisibility}"
                            Background="#E74C3C"
                            Foreground="White"
                            FontSize="13"
                            Padding="15,10"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btnActionOrSave" 
                            Content="Add" 
                            Click="btnActionOrSave_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="Close" 
                            Click="btnCancel_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
