<Window x:Class="PL.Delivery.AvailableOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Delivery"
        mc:Ignorable="d"
        Title="Available Orders" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource AppBackgroundColor}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="tbTitle" Style="{StaticResource SectionHeader}"/>
            <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="80"/>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="1" Style="{StaticResource RoundedBorderWithShadow}" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          x:Name="dgAvailableOrders"
                          ItemsSource="{Binding AvailableOrders}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="120"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding OrderType}" Width="70"/>
                        <DataGridTextColumn Header="Distance (km)" Binding="{Binding ArialDistance, StringFormat='0:F2'}" Width="100"/>
                        <DataGridTextColumn Header="Weight (kg)" Binding="{Binding Weight, StringFormat='0:F2'}" Width="100"/>
                        <DataGridTextColumn Header="Fragile" Binding="{Binding IsFragile}" Width="70"/>
                        <DataGridTemplateColumn Header="Action" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="TAKE IT"
                                            Style="{StaticResource PrimaryButton}"
                                            Click="btnTakeOrder_Click"
                                            Padding="8,4"
                                            FontSize="11"
                                            Foreground="White"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <TextBlock Grid.Row="0"
                           x:Name="tbEmptyState"
                           Text="No available orders for your delivery range"
                           Style="{StaticResource EmptyStateMessage}"
                           Visibility="Collapsed"/>

                <!-- Footer Stats -->
                <Border Grid.Row="1" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   x:Name="tbOrderCount"
                                   Text="Total Orders: 0" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource SecondaryColor}"/>

                        <Button Grid.Column="2"
                               Content="Close"
                               Click="btnClose_Click"
                               Style="{StaticResource SecondaryButton}"
                               Width="80"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
