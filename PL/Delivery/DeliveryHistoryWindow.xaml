<Window x:Class="PL.Delivery.DeliveryHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Delivery"
        mc:Ignorable="d"
        Title="Delivery History" Height="680" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource AppBackgroundColor}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="tbTitle" Style="{StaticResource SectionHeader}"/>
            <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="80"/>
        </StackPanel>

        <!-- Filters Section -->
        <Border Grid.Row="1" Style="{StaticResource RoundedBorderWithShadow}" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Filter -->
                <Label Grid.Column="0" Content="Status:" Style="{StaticResource LabelHeader}"/>
                <ComboBox Grid.Column="1" 
                          x:Name="cbxStatusFilter"
                          Style="{StaticResource ComboBoxRegular}"
                          SelectionChanged="cbxStatusFilter_SelectionChanged">
                    <ComboBoxItem>All</ComboBoxItem>
                    <ComboBoxItem>Delivered</ComboBoxItem>
                </ComboBox>

                <!-- Date Filter -->
                <Label Grid.Column="3" Content="From:" Style="{StaticResource LabelHeader}"/>
                <DatePicker Grid.Column="4" 
                           x:Name="dpFromDate"
                           SelectedDateChanged="dpFromDate_SelectedDateChanged"
                           Style="{StaticResource DatePickerRegular}"/>

                <!-- Sort -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Sort ↑" 
                           Click="btnSortAscending_Click"
                           Style="{StaticResource SecondaryButton}"
                           Width="70" Margin="0,0,10,0"/>
                    <Button Content="Sort ↓" 
                           Click="btnSortDescending_Click"
                           Style="{StaticResource SecondaryButton}"
                           Width="70"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Style="{StaticResource RoundedBorderWithShadow}" Padding="15">
            <DataGrid x:Name="dgDeliveryHistory"
                      ItemsSource="{Binding DeliveryHistory}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      VerticalScrollBarVisibility="Auto"
                      MouseDoubleClick="dgDeliveryHistory_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="65"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="120"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding DeliveryAddress}" Width="180"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="110"/>
                    <DataGridTextColumn Header="Pickup Date" Binding="{Binding PickupDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="Delivery Date" Binding="{Binding DeliveryDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="Elapsed Time" Binding="{Binding ElapsedTime}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Empty State Message -->
        <TextBlock Grid.Row="2" 
                   x:Name="tbEmptyState"
                   Text="No delivery history available"
                   Style="{StaticResource EmptyStateMessage}"
                   Visibility="Collapsed"/>

        <!-- Footer with Stats -->
        <Border Grid.Row="3" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total Deliveries: " FontWeight="SemiBold" Foreground="{StaticResource SecondaryColor}"/>
                    <TextBlock x:Name="tbTotalCount" Text="0" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <TextBlock Text="Average Time: " FontWeight="SemiBold" Foreground="{StaticResource SecondaryColor}"/>
                    <TextBlock x:Name="tbAverageTime" Text="—" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="3"
                       Content="Close"
                       Click="btnClose_Click"
                       Style="{StaticResource SecondaryButton}"
                       Width="80"/>
            </Grid>
        </Border>
    </Grid>
</Window>
