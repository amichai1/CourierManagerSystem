<Window x:Class="PL.Courier.CourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Courier"
        xmlns:pl="clr-namespace:PL"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Courier Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource AppBackgroundColor}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <converters:IsraeliIdConverter x:Key="IsraeliIdConverterKey"/>
        <converters:PhoneNumberConverter x:Key="PhoneConverterKey"/>
        <converters:EmailConverter x:Key="EmailConverterKey"/>
        <converters:MaxDistanceConverter x:Key="MaxDistanceConverterKey"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Courier Details -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Courier Details Border -->
            <Border Grid.Row="0" Style="{StaticResource RoundedBorderWithShadow}" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Courier Details" Style="{StaticResource SectionHeader}"/>
                        <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="60"/>
                    </StackPanel>

                    <!-- Form Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                        <Grid IsEnabled="{Binding IsFieldsEnabled}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Id -->
                            <Label Grid.Row="0" Grid.Column="0" Content="Courier ID:" Style="{StaticResource LabelHeader}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    x:Name="courierIdTextBox"
                                    Text="{Binding CurrentCourier.Id, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IsraeliIdConverterKey}}" 
                                    Style="{StaticResource TextBoxRegular}" Margin="0,0,0,10"
                                    ToolTip="Must be 9 digits (Israeli ID)"/>

                            <!-- Password -->
                            <Label Grid.Row="1" Grid.Column="0" Content="Password:" Style="{StaticResource LabelHeader}"
                                   Visibility="{Binding PasswordFieldVisibility}"/>
                            <Grid Grid.Row="1" Grid.Column="1"
                                  Margin="0,0,0,10"
                                  Visibility="{Binding PasswordFieldVisibility}">
                                <Button Content="Reset Password"
                                        Click="btnResetPassword_Click"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left"
                                        MinWidth="140" Height="32"
                                        Padding="12,4"
                                        Visibility="{Binding ResetPasswordVisibility}"
                                        ToolTip="Generate a new random password for this courier"/>
                                <Button Content="Change Password"
                                        Click="btnChangePassword_Click"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left"
                                        MinWidth="140" Height="32"
                                        Padding="12,4"
                                        Visibility="{Binding ChangePasswordVisibility}"
                                        ToolTip="Change your password"/>
                            </Grid>

                            <!-- Name -->
                            <Label Grid.Row="2" Grid.Column="0" Content="Full Name:" Style="{StaticResource LabelHeader}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                    Text="{Binding CurrentCourier.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource TextBoxRegular}" Margin="0,0,0,10"/>

                            <!-- Phone -->
                            <Label Grid.Row="3" Grid.Column="0" Content="Phone:" Style="{StaticResource LabelHeader}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                    Text="{Binding CurrentCourier.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PhoneConverterKey}}" 
                                    Style="{StaticResource TextBoxRegular}" Margin="0,0,0,10"
                                    ToolTip="Format: 05XXXXXXXX (10 digits)"/>

                            <!-- Email -->
                            <Label Grid.Row="4" Grid.Column="0" Content="Email:" Style="{StaticResource LabelHeader}"/>
                            <TextBox Grid.Row="4" Grid.Column="1" 
                                    Text="{Binding CurrentCourier.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EmailConverterKey}}" 
                                    Style="{StaticResource TextBoxRegular}" Margin="0,0,0,10"/>

                            <!-- Max Distance -->
                            <Label Grid.Row="5" Grid.Column="0" Content="Max Distance:" Style="{StaticResource LabelHeader}"/>
                            <TextBox Grid.Row="5" Grid.Column="1" 
                                    Text="{Binding CurrentCourier.MaxDeliveryDistance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource MaxDistanceConverterKey}}" 
                                    Style="{StaticResource TextBoxRegular}" Margin="0,0,0,10"
                                    ToolTip="Minimum 10 km"/>

                            <!-- Delivery Type -->
                            <Label Grid.Row="6" Grid.Column="0" Content="Delivery Type:" Style="{StaticResource LabelHeader}"/>
                            <ComboBox Grid.Row="6" Grid.Column="1" 
                                      ItemsSource="{StaticResource CourierDeliveryTypesKey}"
                                      SelectedValue="{Binding CurrentCourier.DeliveryType, Mode=TwoWay}" 
                                      Style="{StaticResource ComboBoxRegular}" Margin="0,0,0,10"
                                      IsEnabled="{Binding IsDeliveryTypeEnabled}"
                                      ToolTip="Cannot change delivery type while handling an order"/>

                            <!-- Start Date -->
                            <Label Grid.Row="7" Grid.Column="0" Content="Start Date:" Style="{StaticResource LabelHeader}"/>
                            <DatePicker Grid.Row="7" Grid.Column="1" 
                                       SelectedDate="{Binding CurrentCourier.StartWorkingDate, Mode=TwoWay}" 
                                       Style="{StaticResource DatePickerRegular}" Margin="0,0,0,10"/>

                            <!-- Is Active -->
                            <Label Grid.Row="8" Grid.Column="0" Content="Active:" Style="{StaticResource LabelHeader}"/>
                            <CheckBox Grid.Row="8" Grid.Column="1"
                                      IsChecked="{Binding CurrentCourier.IsActive, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      Margin="5,0,0,0">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                        </Grid>
                    </ScrollViewer>

                    <!-- Salary Display Section (NO buttons here) -->
                    <Border Grid.Row="2" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,15,0,0"
                            Visibility="{Binding SalaryVisibility}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Current Salary" Style="{StaticResource SubtitleHeader}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Monthly Salary" FontSize="11" Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock Text="{Binding SalaryAmount, StringFormat='â‚ª{0:F2}'}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextColor}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Completed Deliveries" FontSize="11" Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextColor}">
                                        <Run Text="{Binding DeliveredCount}"/>
                                        <Run Text=" orders"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Action Buttons - ALWAYS VISIBLE (outside the salary section) -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Save" 
                        Style="{StaticResource PrimaryButton}"
                        Click="btnAddUpdate_Click"
                        Width="100"
                        Margin="0,0,5,0"
                        Visibility="{Binding SaveButtonVisibility}"/>
                <Button Content="Cancel" 
                        Style="{StaticResource SecondaryButton}"
                        Click="btnClose_Click"
                        Width="100"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel - Current Order & Action Buttons (for couriers only) -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="150"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Current Order / Available Orders Section -->
            <Border Grid.Row="0" Style="{StaticResource RoundedBorderWithShadow}" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock x:Name="tbTopSection" Text="Current Order" Style="{StaticResource SectionHeader}"/>
                        <Rectangle Height="2" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" Width="60"/>
                    </StackPanel>

                    <!-- Current Order Content -->
                    <Grid Grid.Row="1" Visibility="{Binding CurrentOrderVisibility}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer Information -->
                        <TextBlock Grid.Row="0" Text="Customer Information" Style="{StaticResource SubtitleHeader}"/>
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="Customer Name" Style="{StaticResource LabelHeader}" Padding="0,0,0,3"/>
                                <TextBox Text="{Binding CurrentOrder.CustomerName, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         Style="{StaticResource TextBoxRegular}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Content="Phone Number" Style="{StaticResource LabelHeader}" Padding="0,0,0,3"/>
                                <TextBox Text="{Binding CurrentOrder.CustomerPhone, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         Style="{StaticResource TextBoxRegular}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Delivery Information -->
                        <TextBlock Grid.Row="2" Text="Delivery Information" Style="{StaticResource SubtitleHeader}"/>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="Address" Style="{StaticResource LabelHeader}" Padding="0,0,0,3"/>
                                <TextBox Text="{Binding CurrentOrder.Address, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         Style="{StaticResource TextBoxRegular}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Content="Status" Style="{StaticResource LabelHeader}" Padding="0,0,0,3"/>
                                <TextBox Text="{Binding CurrentOrder.OrderStatus, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         Style="{StaticResource TextBoxRegular}"
                                         Width="100"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <Label Content="Order ID" Style="{StaticResource LabelHeader}" Padding="0,0,0,3"/>
                                <TextBox Text="{Binding CurrentOrder.Id, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         Style="{StaticResource TextBoxRegular}"
                                         Width="70"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Empty State Message - No Current Order -->
                    <TextBlock Grid.Row="1" 
                               Text="No current order assigned"
                               Style="{StaticResource EmptyStateMessage}"
                               Visibility="{Binding NoCurrentOrderVisibility}"/>

                    <!-- Status Promotion Button (shown only if CurrentOrder exists) -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"
                                Visibility="{Binding PromoteStatusButtonVisibility}">
                        
                        <!-- Refuse Button -->
                        <Button Content="ðŸš« Customer Refuse" 
                                Click="btnRefuse_Click" 
                                Style="{StaticResource DeleteButtonStyle}" 
                                Width="140" Margin="0,0,10,0"/>
                        
                        <!-- Delivered Button (Previously Complete) -->
                        <Button Content="âœ“ Delivered" 
                                Click="btnPromoteStatus_Click" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="160"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons Section (Visible only for couriers) -->
            <StackPanel Grid.Row="2" Visibility="{Binding ActionButtonsVisibility}">
                <Button Content="ðŸ“‹ Delivery History"
                        Style="{StaticResource PrimaryButton}"
                        Click="btnDeliveryHistory_Click"
                        Height="50"
                        FontSize="14"
                        Margin="0,0,0,10"/>
                <Button Content="ðŸ“¦ Select Order"
                        Style="{StaticResource PrimaryButton}"
                        Click="btnSelectOrder_Click"
                        Height="50"
                        FontSize="14"
                        IsEnabled="{Binding SelectOrderButtonEnabled}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
